extends ../layouts/default

block vars
	-
		const page = {
		title: 'Медиаторы главная',
		order: 9,
		isChild: true
		};



block main
	section.resume
		.container.resume__container
			.resume__photo
				img(src='images/resume.jpg', srcset='images/resume@2x.jpg 2x', alt='')
			.resume__content
				+title('Анна Сорокина', 'h2', 'resume__name title--green')
				p Руководитель Центра медиации при РСПП <br> Юрист, психолог, коуч, медиатор
				p.region <b>Москва</b>

				+title('Образование', 'h2', 'resume__subtitle title--upper')
				ul
					li МГУ им. М.В. Ломоносова, юридический факультет // Юрист
					li Московский институт психоанализа, Психология // Психолог

				+title('ПОВЫШЕНИЕ КВАЛИФИКАЦИИ', 'h2', 'resume__subtitle title--upper')
				ul
					li НОУ ДПО Институт психотерапии и клинической психологии,    Проф. переподготовка, Психология бизнеса, Коучинг // Коуч
					li Московский институт психоанализа, Повышение квалификации,    курс «Профессия Бизнес-тренер» // Бизнес-тренер
					li Самарская Гуманитарная Академия, Повышение квалификации, Медиация. Базовый курс // Медиатор
					li Самарская Гуманитарная Академия, Повышение квалификации, Медиация.    Курс подготовки тренеров медиаторов // Тренер медиаторов

				+title('ОПЫТ РАБОТЫ', 'h2', 'resume__subtitle title--upper')
				ul
					li Руководитель Центра медиации при РСПП
					li Основатель и генеральный директор Soft Skills Law Academy
					li Глава практики внесудебного разрешения споров юридической компании «Гриц  и партнёры» в 2020 году,
						|  реализация проекта #МыСВамиЗаодно (бесплатной медиативной помощи арендаторам по разрешению конфликтов
						|  с арендодателями в период кризиса COVID-19 первой волны, март-май 2020 года)
					li 14-летний стаж работы по юридической специальности, из которых 12 лет в международной юридической компании Noerr
					li Председатель Комиссии по высшему юридическому образованию Московского отделения Ассоциации юристов России
					li Автор и координатор программы обучения бизнес-медиаторов и тренеров по медиации, реализуемой совместно с НИУ ВШЭ
					li Преподаватель курса «Практические навыки работы юриста» Юридического института «М-Логос»
					li Автор и преподаватель видеокурса «Soft Skills for Lawyers: гибкие навыки юриста», размещённого на платформе «Универсариум»
					li Соавтор и соредактор книги «Навыки современного юриста: soft skills, повышающие эффективность
						|  и качество жизни» / Под ред. А. Сорокиной и Д. Грица. – Москва: Статут, 2021. – 460 стр.
