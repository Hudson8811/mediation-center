mixin partner-item(item, className)
  .partners-section__item(class= className ? className : '')
    .partners-section__item-image 
      img(src="images/partners/" + item.img.n + ".jpg", srcset="images/partners/" + item.img.n + "@2x.jpg 2x" width= item.img.w, height= item.img.h, alt="Логотип " + item.title)
    h3.partners-section__item-title  
      a(href="partner-page.html")= item.title 
    
    time.partners-section__item-date(datetime= item.date.attr)= item.date.text 

    .partners-section__item-number 
      | Номер соглашения о&nbsp;партнерстве 
      span= item.num