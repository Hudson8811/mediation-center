mixin event-card(image, title, date, className, url, links, type)
  .event-card(class= className)
    if image
      .event-card__image
        img(src='images/event/' + image + '.jpg', srcset='images/event/' + image + '@2x.jpg 2x', alt='')
    .event-card__content
      if type
        h3.event-card__title!= title
      else
        a.event-card__title(href= url, target='_blank')!= title
      if date
        .event-card__date!= date
      if links
        .event-card__links
          +arrow-link('все мероприятия', '', '#')
          +arrow-link('все программы', '', '#')